.home_btn {
	
}


.board {
	display : inline-block;
	width : 100%;
	height : 650px;
}

.chat_board {
	display : inline-block;
	background-color : white;
	width : 94%;
	height : 560px;
	margin-top : 3%;
	margin-left : 3%;
	overflow-y: scroll;
	overflow-x: hidden;
}

/* 채팅 틀 */
.chat_wrap {
	display: inline-block;
	height: auto;
	width: 100%;
	
}

/* 다른사람 채팅 */
.chat_area {
	display: inline-block;
	/* width: 100%; */
	height: 100%;
}

/* 내 채팅 */
.m_my_chat_area {
	display: inline-block;
	/* width: 100%; */
	height: 100%;
	float: right;
}

/* 채팅 작성자 정보 */
.info_wrap {
	display: inline-block;
	width: 100%;
	height: 40%;
}

.info_wrap > div{
    padding-top: 5px;
    font-size: 10pt;
    font-weight: bold;
}

.info_posi {
	display: inline-block;
	vertical-align: top;
	height: 100%;
}

.info_name {
	display: inline-block;
	vertical-align: top;
	height: 100%;
}

.info_depart {
	display: inline-block;
	vertical-align: top;
	height: 100%;
}

.info_team {
	display: inline-block;
	vertical-align: top;
	height: 100%;
}

.con_wrap {
	width: 400px;
}

.con {
	display: inline-block;
	vertical-align: top;
	width: 67%;
	height: 100%;
	overflow-wrap: break-word;
}

.sdate {
	display: inline-block;
	vertical-align: top;
	height: 100%;
	font-size: 9pt;
}

/* 내채팅 */
.m_info_wrap {
	display: inline-block;
	width: 100%;
	text-align: right;
}

.m_info_wrap > div{
    padding-top: 5px;
    font-size: 10pt;
    font-weight: bold;
}

.m_info_posi {
	display: inline-block;
	vertical-align: top;
	height: 100%;
}

.m_info_name {
	display: inline-block;
	vertical-align: top;
	height: 100%;
}

.m_info_depart {
	display: inline-block;
	vertical-align: top;
	height: 100%;
}

.m_info_team {
	display: inline-block;
	vertical-align: top;
	height: 100%;
}

.m_con_wrap {
	width: 420px;
}

.m_con {
	display: inline-block;
	vertical-align: top;
	width: 72%;
	height: 100%;
	overflow-wrap: break-word;
	text-align: right;
}

.m_sdate {
	display: inline-block;
	vertical-align: bottom;
	height: 100%;
	font-size: 9pt;
}
/* 내채팅 끝 */


.bottom_bar {
	display : inline-block;
	width : 1016px;
	height : 40px;
	margin-left : 32px;
	background-color : gray;
}

.write {
   display: inline-block;;
   width : 850px;
   height: 32px;
   font-size: 10pt;
   color: #595959;
   text-align : center;
   border-radius : 5px;
   background-color : #F2B807;
   vertical-align: top;
   font-size: 12pt;
   margin-left: 20px;
   margin-top: 3px;
}

.send {
	display: inline-block;
	width: 90px;
	height: 32px;
	color: #595959;
	background-color: #F2B807;
	font-size: 15pt;
	text-align: center;
	border-radius : 5px;
	margin-left: 20px;
	cursor: pointer;
	margin-top: 4px;
	
}

.send:hover {
	background-color : #F2CB07
}


