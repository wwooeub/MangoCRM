@charset "UTF-8";
.grade_chart_area {
	width: 1200px;
	height: 280px;
	font-size: 0;
}

.grade_chart {
	display: inline-block;
	margin: 0px 50px 0px 20px;
	width: 300px;
	height: 300px;
	vertical-align: top;
}

.grade_chart_right {
	margin-top: 20px;
	display: inline-block;
	font-size: 9pt;
	width: 600px;
}

.grade {
	display: inline-block;
	width: 270px;
	margin: 20px 0;
}

.grade_name {
	width: 30px;
	display: inline-block;
	font-size: 13pt;
	font-weight: bold;
	margin-left: 5px;
	vertical-align: top;
}

.grade_per{
	width: 60px;
	display: inline-block;
	font-size: 13pt;
	margin-left: 10px;
	vertical-align: top;
}

.grade_count{
	font-size: 12pt;
}

.grade_color {
	vertical-align: top;
	display: inline-block;
	height: 20px;
	width: 20px;
}

.grade_chart_title {
	font-size: 20pt;
	font-weight: bold;
	margin-bottom: 20px;
}

.grade_name_edit {
	width: 250px;
	height: 30px;
	font-size : 11pt;
	border : 1px solid #ccc;
	border-radius : 5px;
	padding: 10px;
}

.grade_name_edit::placeholder {
	color: #cacaca;
}

.grade_name_edit:focus {
	border : 1px solid #F2CB07;
}

.grade_color_btn {
	display: inline-block;
	background-color: #000;
	height: 25px;
	width: 25px;
	cursor: pointer;
}

.edit_table {
	width: 1080px;
 	text-align: center;
  	border-collapse: collapse;
   	font-size : 10pt;
}

.grade_rank{
	font-size: 12pt;
	font-weight: bold;
}

.edit_btn_area{
	width : 1080px;
   	height : 50px;
   	text-align: right;
   	font-size: 0;
}

.grade_srch_align{
   display : inline-block;
   width: 100px;
   height: 25px;
   font-size: 10pt;
   margin-top : 10px;
   margin-left : 10px;
   border : 1px solid #ccc;
   border-radius : 5px;
   float : right;
}

.grade_edit {
	width: 100px;
	height: 30px;
	font-size : 10pt;
	border : 1px solid #ccc;
	border-radius : 3px;
}

.palette {
	display: none;
	position: absolute;
	left: 980px;
	background-color: #FFF;
	width: 150px;
	height: 121px;
	border-radius: 5px;
	padding: 9px;
	box-shadow: 1px 2px 7px rgba(0, 0, 0, 0.5);
	border: 1px solid gray;
	z-index: 20;
}

.palette:before {
	content: '';
	position: absolute;
	top: 9px;
	left: 29px;
	width: 0px;
	height: 0px;
	border: 12px solid transparent;
	border-bottom-color: black;
	border-top: 0;
	margin-left: -21px;
	margin-top: -21px;
}

.palette:after {
	content: '';
	position: absolute;
	top: 9px;
	left: 29px;
	width: 0px;
	height: 0px;
	border: 11px solid transparent;
	border-bottom-color: #FFF;
	border-top: 0;
	margin-left: -20px;
	margin-top: -20px;
	z-index: 20;
}

